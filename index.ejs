<!DOCTYPE html>
<html>
<head>
    <title>Movie Application</title>
    <style>
        table { width: 100%; border-collapse: collapse; }
        th, td { border: 1px solid #ddd; padding: 8px; }
        th { background-color: #f4f4f4; }
    </style>
</head>
<body>
    <h1>Movie List</h1>
    <a href="/addmovie">Add Movie</a>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Year</th>
                <th>Genre</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            <% movies.forEach(function(movie) { %>
                <tr>
                    <td><%= movie.title %></td>
                    <td><%= movie.year %></td>
                    <td><%= movie.genre %></td>
                    <td><%= movie.director %></td>
                    <td><%= movie.rating %></td>
                    <td><%= movie.description %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
